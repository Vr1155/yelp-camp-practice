<% layout('layouts/boilerplate')%>
<form
  action="/login"
  method="POST"
  class="client-side-form-validation"
  novalidate
>
  <legend><h1>Login</h1></legend>

  <div class="mb-3">
    <label class="form-label" for="username">Username</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="valid-feedback">Looks good!</div>
  </div>

  <div class="mb-3">
    <label class="form-label" for="password">Password</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="valid-feedback">Looks good!</div>
  </div>

  <div class="mb-3">
    <!-- default button type is submit for most browser, you can also create a reset button if you want! -->
    <button class="btn btn-success">Login</button>
  </div>
</form>
